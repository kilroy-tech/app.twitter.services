{
    "name": "twitter.services/client/stop_hook",
    "version": "1",
    "description": "",
    "isInteractive": false,
    "clean_up": true,
    "inputs": [],
    "outputs": [],
    "args": {
        "role": "*"
    },
    "steps": [
        {
            "operation": "set_value",
            "isServer": true,
            "args": {
                "variable": "wfCleanupFlag",
                "value": "1"
            }
        },
        {
            "operation": "step_group",
            "isServer": true,
            "args": {
                "role": "system",
                "message": "",
                "timer": "24",
                "isInteractive": false,
                "canTerminate": false,
                "success": [
                    {
                        "operation": "swarm_command",
                        "isServer": true,
                        "args": {
                            "command": "leave",
                            "command_args": {
                                "topic": "heartbeat-${_uuid}"
                            }
                        }
                    },
                    {
                        "operation": "if_then_else",
                        "isServer": true,
                        "args": {
                            "condition": "${ta_swarm_connected}",
                            "success": [
                                {
                                    "operation": "swarm_command",
                                    "isServer": true,
                                    "args": {
                                        "command": "leave",
                                        "command_args": {
                                            "topic": "${ta_swarm}"
                                        }
                                    }
                                }
                            ],
                            "failure": []
                        }
                    }
                ]
            }
        },
        {
            "operation": "end",
            "isServer": true,
            "args": null
        }
    ],
    "externalForms": {}
}